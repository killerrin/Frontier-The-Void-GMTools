<Page x:Class="Frontier_The_Void_GMTools.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Frontier_The_Void_GMTools"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Tool Selection"
      DataContext="{Binding Source={StaticResource Locator}, Path=vm_MainViewModel}">

    <Grid>
        <StackPanel>
            <Button x:Name="rollDiceButton" Content="Roll Dice" Click="RollDiceButton_Click"/>
            <Button x:Name="ftlPlanetGenerationButton" Content="FTL and Planet Generation" Click="FTLPlanetGenerationButton_Click"/>
            <Button x:Name="combatButton" Content="Combat" Click="CombatButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
